
@{
    ViewBag.Title = "Login";
}

<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-xl shadow">
    <h1 class="text-2xl font-bold mb-4">Admin Login</h1>

    @if (ViewBag.Error != null)
    {
        <div class="mb-4 rounded bg-red-50 p-3 text-red-700 text-sm">
            @ViewBag.Error
        </div>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <label class="block text-sm font-medium mb-1">Username</label>
            <input name="username" class="w-full border rounded px-3 py-2" />
        </div>

        <div class="mb-4">
            <label class="block text-sm font-medium mb-1">Password</label>
            <input name="password" type="password" class="w-full border rounded px-3 py-2" />
        </div>

        <button class="w-full rounded bg-indigo-600 text-white font-semibold py-2 hover:bg-indigo-700">
            Sign in
        </button>
    }
</div>