@model Carlnsurance.Models.Insuree

@{
    ViewBag.Title = "Delete Insuree";
}

<main class="max-w-4xl mx-auto px-4 py-10">
    <div class="bg-white shadow-xl rounded-2xl p-8">
        <!-- Header -->
        <header class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Delete Insuree</h1>
            <p class="mt-2 text-gray-600">
                Are you sure you want to delete this record? This action cannot be undone.
            </p>
        </header>

        <!-- Details Card -->
        <section class="rounded-xl border border-gray-200 bg-gray-50 p-6">
            <h2 class="text-lg font-semibold text-gray-900 mb-4">Insuree Details</h2>

            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-8 gap-y-4 text-sm">
                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.FirstName)</dt>
                    <dd class="text-gray-900 mt-1">@Html.DisplayFor(m => m.FirstName)</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.LastName)</dt>
                    <dd class="text-gray-900 mt-1">@Html.DisplayFor(m => m.LastName)</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.EmailAddress)</dt>
                    <dd class="text-gray-900 mt-1">@Html.DisplayFor(m => m.EmailAddress)</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.DateOfBirth)</dt>
                    <dd class="text-gray-900 mt-1">@Html.DisplayFor(m => m.DateOfBirth)</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.CarYear)</dt>
                    <dd class="text-gray-900 mt-1">@Html.DisplayFor(m => m.CarYear)</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.CarMake)</dt>
                    <dd class="text-gray-900 mt-1">@Html.DisplayFor(m => m.CarMake)</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.CarMode)</dt>
                    <dd class="text-gray-900 mt-1">@Html.DisplayFor(m => m.CarMode)</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.SpeedingTickets)</dt>
                    <dd class="text-gray-900 mt-1">@Html.DisplayFor(m => m.SpeedingTickets)</dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.DUI)</dt>
                    <dd class="text-gray-900 mt-1">
                        @(Model.DUI ? "Yes" : "No")
                    </dd>
                </div>

                <div>
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.CoverageType)</dt>
                    <dd class="text-gray-900 mt-1">
                        @(Model.CoverageType ? "Full Coverage" : "Liability")
                    </dd>
                </div>

                <div class="sm:col-span-2">
                    <dt class="font-medium text-gray-700">@Html.DisplayNameFor(m => m.Quote)</dt>
                    <dd class="text-gray-900 mt-1">
                        @String.Format("{0:C}", Model.Quote)
                    </dd>
                </div>
            </dl>
        </section>

        <!-- Actions -->
        <div class="mt-8 flex flex-col sm:flex-row gap-3 sm:justify-end">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <button type="submit"
                        class="inline-flex items-center justify-center rounded-md bg-red-600 px-6 py-2 text-white font-semibold hover:bg-red-700 transition">
                    Delete
                </button>
            }

            @Html.ActionLink(
                "Cancel",
                "Index",
                null,
                new { @class = "inline-flex items-center justify-center rounded-md border border-gray-300 px-6 py-2 text-gray-700 hover:bg-gray-100 transition" }
            )
        </div>
    </div>
</main>