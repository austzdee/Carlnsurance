<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Car Insurance</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Tailwind CSS (CDN) -->
    <script src="https://cdn.tailwindcss.com"></script>

    @RenderSection("styles", required: false)
</head>
<body class="bg-gray-100 text-gray-900 min-h-screen">

    <!-- Navigation -->
    <nav class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
            <a href="@Url.Action("Index", "Home")" class="text-xl font-bold tracking-tight text-gray-900">
                Car Insurance
            </a>

            <ul class="flex items-center gap-6">
                <li>
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "text-sm font-medium text-gray-700 hover:text-gray-900" })
                </li>
                <li>
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "text-sm font-medium text-gray-700 hover:text-gray-900" })
                </li>
                <li>
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "text-sm font-medium text-gray-700 hover:text-gray-900" })
                </li>
                <li>
                    @Html.ActionLink("Admin", "Admin", "Insuree", null, new { @class = "text-sm font-semibold text-indigo-600 hover:text-indigo-700" })
                </li>
            </ul>
        </div>
    </nav>

    <!-- Page Content -->
    <main class="max-w-7xl mx-auto px-4 py-6">
        @RenderBody()
    </main>

    @RenderSection("scripts", required: false)
</body>
</html>