@{
    ViewBag.Title = "Home";
}

<!-- HERO SECTION -->
<section class="bg-indigo-600 text-white">
    <div class="max-w-7xl mx-auto px-6 py-16 grid grid-cols-1 md:grid-cols-2 gap-10 items-center">

        <div>
            <h1 class="text-4xl md:text-5xl font-bold leading-tight">
                Simple, Fair Car Insurance Quotes
            </h1>

            <p class="mt-4 text-lg text-indigo-100">
                Get a personalised car insurance quote in minutes.
                No paperwork. No guesswork. Just clear pricing.
            </p>

            <div class="mt-8 flex gap-4">
                @Html.ActionLink(
                    "Get a Quote",
                    "Create",
                    "Insuree",
                    null,
                    new
                         {
                        @class = "bg-white text-indigo-700 px-6 py-3 rounded-md font-semibold hover:bg-gray-100 transition"
                    }
                )

                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink(
                        "Admin Dashboard",
                        "Admin",
                        "Insuree",
                        null,
                        new
                            {
                            @class = "inline-block bg-indigo-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-indigo-700 transition"
                        }
                    )
                }
            </div>
        </div>

        <!-- Trust Panel -->
        <div class="bg-white text-gray-900 rounded-xl shadow-lg p-8">
            <h3 class="text-xl font-semibold mb-4">
                Why choose our insurance?
            </h3>

            <ul class="space-y-3 text-sm">
                <li class="flex items-start gap-2">
                    <span class="text-indigo-600 font-bold">✓</span>
                    Quotes calculated automatically using clear rules
                </li>
                <li class="flex items-start gap-2">
                    <span class="text-indigo-600 font-bold">✓</span>
                    No hidden fees or surprise charges
                </li>
                <li class="flex items-start gap-2">
                    <span class="text-indigo-600 font-bold">✓</span>
                    Built with ASP.NET MVC & Entity Framework
                </li>
            </ul>
        </div>

    </div>
</section>

<!-- FEATURES -->
<section class="max-w-7xl mx-auto px-6 py-16">
    <h2 class="text-3xl font-bold text-center mb-12">
        How it works
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

        <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-xl font-semibold mb-2">Enter your details</h3>
            <p class="text-gray-600 text-sm">
                Provide your age, car information, driving history,
                and preferred coverage type.
            </p>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-xl font-semibold mb-2">Instant calculation</h3>
            <p class="text-gray-600 text-sm">
                Our system applies pricing rules automatically
                to calculate a fair monthly quote.
            </p>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6">
            <h3 class="text-xl font-semibold mb-2">View & manage</h3>
            <p class="text-gray-600 text-sm">
                View, edit, or delete quotes anytime.
                Admins can review all issued quotes securely.
            </p>
        </div>

    </div>
</section>

<!-- ADMIN CALLOUT -->
@if (User.IsInRole("Admin"))
{
    <section class="bg-gray-100">
        <div class="max-w-7xl mx-auto px-6 py-14 text-center">
            <h2 class="text-2xl font-bold mb-4">
                Admin Dashboard
            </h2>
            <p class="text-gray-600 max-w-2xl mx-auto mb-6">
                Review all issued insurance quotes securely.
            </p>

            @Html.ActionLink(
                "Go to Admin Dashboard",
                "Admin",
                "Insuree",
                null,
                new
                     {
                    @class = "inline-block bg-indigo-600 text-white px-6 py-3 rounded-md font-semibold hover:bg-indigo-700 transition"
                }
            )
        </div>
    </section>
}